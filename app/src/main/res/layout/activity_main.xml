<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="324dp"
        android:layout_height="143dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:scrollbarDefaultDelayBeforeFade="@android:integer/config_mediumAnimTime"
        android:scrollbarFadeDuration="@android:integer/config_longAnimTime"
        android:text="Banking System Application"
        android:textColor="#000"
        android:textColorLink="#2196F3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="261dp"
        android:scrollbarThumbHorizontal="@drawable/download"
        android:scrollbarTrackVertical="@drawable/download"
        android:src="@drawable/download" />

    <Button
        android:id="@+id/button"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="View Users"
        android:textAlignment="gravity"
        android:textColor="@color/design_default_color_on_secondary"
        android:textColorHighlight="#FFFFFF" />

</LinearLayout>